{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "trailing-comma": false,
        "semicolon": false,
        "variable-name": [
            true,
            "allow-snake-case",
            "allow-pascal-case"
        ],
        "object-literal-sort-keys": [
            false
        ],
        "max-classes-per-file": [
            false
        ],
        "ordered-imports" : [
            false
        ],
        "arrow-parens": [false],
        "interface-name": [false]

    },
    "rulesDirectory": []
}
